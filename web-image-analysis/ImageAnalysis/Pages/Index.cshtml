@page
@model IndexModel
@{
    ViewData["Title"] = "People Image Analysis";
}

<div class="text-center">
    <h1 class="display-4">People Image Analysis</h1>
    <p class="lead">Upload an image to analyze its content and identif people.</p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0"><i class="fas fa-upload"></i> Upload Image</h3>
            </div>
            <div class="card-body">
                <form id="uploadForm">
                    <div class="mb-3">
                        <label asp-for="Input.ImageFile" class="form-label">
                            <strong>Select Image File</strong>
                        </label>
                        <input asp-for="Input.ImageFile" class="form-control" type="file"
                               accept=".jpg,.jpeg,.png,.gif,.bmp"
                               id="imageInput" />
                        <div class="form-text">
                            <small>
                                <strong>Requirements:</strong><br>
                                • Format: JPEG, PNG, GIF, or BMP<br>
                                • Maximum size: 4MB<br>
                                • Minimum dimensions: 50x50 pixels
                            </small>
                        </div>
                    </div>

                    <!-- Image Preview -->
                    <div id="imagePreview" class="mb-3" style="display: none;">
                        <label class="form-label"><strong>Preview:</strong></label>
                        <div class="text-center">
                            <img id="previewImage" src="" alt="Image preview" class="img-fluid rounded border" style="max-height: 300px;" />
                        </div>
                        <div id="imageInfo" class="mt-2 text-muted"></div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                            <i class="fas fa-cog fa-spin" id="loadingIcon" style="display: none;"></i>
                            <i class="fas fa-search" id="searchIcon"></i>
                            <span id="submitText">Analyze Image</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow mt-4" id="analysisResults" style="display: none">
            <div class="card-header bg-success text-white">
                <h3 class="card-title mb-0"><i class="fas fa-chart-line"></i> Analysis Results</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Analyzed Image</h5>
                        <div class="position-relative">
                            <img src="" alt="Analyzed image" class="img-fluid rounded border" id="analyzedImage" />
                            <canvas id="boundingBoxCanvas" class="position-absolute top-0 start-0"></canvas>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5>Analysis Details</h5>
                        <div id="analysisDetails"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script type="module" src="~/js/wwwroot/js/image-analysis.js"></script>
}
